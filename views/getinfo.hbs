        <!-- ################################ REGISTER FORM ##################################-->

        <div class="container mt-4 ">
            <div class="col-md-12 offset-md-0 form" style=" width: 80;">
                <div class="card-header"> Aadhar Form </div>
                <div class="card-body">

                    <form class="row g-3" action="/auth/bank" method="POST">
                        <div class="col-md-12">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name">

                        </div>
                        <div class="col-md-12">
                            <label for="text">Parent/Guardian Name</label>
                            <input type="text" class="form-control" id="Fname" name="Fname">
                        </div>
                        <div class="col-md-6">
                            <label for="text">Date of Birth</label>
                            <input type="date" class="form-control" id="dob" name="dob">
                        </div>
                        <div class="col-md-6">
                            <label for="text">Age</label>
                            <input type="number" class="form-control" id="age" name="age">
                        </div>
                        <div class="col-md-12">
                            <label for="text">Description</label>
                            <input type="text" class="form-control" id="desc" name="desc">
                        </div>
                        <label for="text">Gender</label>
                        <div class="form-group">
                        &nbsp;&nbsp;
                        <input type="radio" name="gender" id="male">
                        &nbsp;
                        <label for="text">Male</label>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" name="gender" id="female">&nbsp;
                        <label for="text">Female</label>
                
                        </div>
                        <div class="col-md-6">
                            <label for="text">Address</label>
                            <input type="text" class="form-control" id="address" name="address">
                        </div>
                        <div class="col-md-6">
                            <label for="text">District</label>
                            <input type="text" class="form-control" id="district" name="district">
                        </div>
                        <div class="col-md-5">
                            <label for="text">Aadhar Number</label>
                            <input type="number" class="form-control" id="aadhar" name="aadhar">
                        </div>
                        <div class="col-md-5">
                            Aadhar Id proof
                            <input type="file" class="form-control" id="afile" name="afile">
                        </div>
                        <div class="col-md-2">
                            <br>
                            <a type="submit" class="btn btn-success" role="button">Get Aadhar</a>
                        </div>

                        <div class="col-md-5">
                            <label for="text">Bank Account Number</label>
                            <input type="number" class="form-control" id="bnum" name="bnum">
                        </div>
                        <div class="col-md-5">
                            Bank proof
                            <input type="file" class="form-control" id="bfile" name="bfile">
                        </div>
                        <div class="col-md-2">
                            <br>
                            <button type="button" class="btn btn-success" float="right">Get Bank</button>
                        </div>
                        <br>
                        <div class="col-md-4"></div>
                        <div class="col-md-6">
                            <button type="submit"  class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>


            </div>
        </div>


